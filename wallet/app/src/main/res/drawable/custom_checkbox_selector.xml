<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/checked_circle" />
            <item 
                android:drawable="@drawable/check_icon"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"
                android:left="2dp" />
        </layer-list>
    </item>
    <item android:state_checked="false" android:drawable="@drawable/unchecked_circle" />
</selector>