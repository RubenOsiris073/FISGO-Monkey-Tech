<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header moderno con diseÃ±o similar al repo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sync_header_bg"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="50dp"
            android:paddingEnd="24dp"
            android:paddingBottom="40dp">

            <!-- Header content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sync with POS"
                        android:textColor="#E3F2FD"
                        android:textSize="16sp"
                        android:alpha="0.9"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cart Sync"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/sync_icon_bg"
                    android:src="@drawable/ic_sync_modern"
                    android:padding="12dp"
                    android:tint="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

        <!-- Sync Code Input Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/sync_input_card_bg"
            android:padding="28dp"
            android:elevation="12dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sync Code"
                android:textColor="#1D1D1F"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the 6-character code shown on the POS screen"
                android:textColor="#8E8E93"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"
                android:lineSpacingExtra="2dp" />

            <!-- Code Input Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/code_input_bg"
                android:padding="20dp"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/syncCodeInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ABC123"
                    android:inputType="textCapCharacters"
                    android:maxLength="6"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:textColor="#1D1D1F"
                    android:textColorHint="#C7C7CC"
                    android:letterSpacing="0.2"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Error message -->
            <LinearLayout
                android:id="@+id/errorContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/error_message_bg"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_error_circle"
                    android:tint="#FF3B30"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/errorText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Invalid sync code"
                    android:textColor="#FF3B30"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Sync Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/syncButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Sync Cart"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:backgroundTint="#007AFF"
                app:cornerRadius="12dp"
                app:rippleColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Progress indicator -->
            <LinearLayout
                android:id="@+id/progressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="12dp"
                    android:indeterminateTint="#007AFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Syncing cart..."
                    android:textColor="#8E8E93"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Cart Container -->
        <LinearLayout
            android:id="@+id/cartContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:visibility="gone">

            <!-- Cart Summary Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cart_summary_bg"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_shopping_cart_modern"
                        android:tint="#007AFF"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Synced Cart"
                        android:textColor="#1D1D1F"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Cart Items RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cartRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginBottom="20dp" />

                <!-- Total Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/total_section_bg"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Amount"
                        android:textColor="#8E8E93"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textColor="#1D1D1F"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/totalText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0.00"
                            android:textColor="#1D1D1F"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MXN"
                            android:textColor="#8E8E93"
                            android:textSize="14sp"
                            android:background="@drawable/currency_small_badge_bg"
                            android:padding="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Payment Methods Card -->
            <LinearLayout
                android:id="@+id/paymentMethodsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/payment_methods_bg"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginBottom="24dp">

                <!-- Payment Method Selection (Custom) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Method"
                    android:textColor="#1D1D1F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Wallet Option (Custom) -->
                <LinearLayout
                    android:id="@+id/walletOptionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/payment_option_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <CheckBox
                        android:id="@+id/walletCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:checked="true"
                        android:button="@drawable/custom_checkbox_selector"
                        android:background="@null" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_wallet_modern"
                        android:tint="#007AFF"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wallet Balance"
                            android:textColor="#1D1D1F"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/walletBalanceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available: $0.00"
                            android:textColor="#4CAF50"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Credit Card Option (Custom) -->
                <LinearLayout
                    android:id="@+id/cardOptionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/payment_option_bg"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="24dp">

                    <CheckBox
                        android:id="@+id/cardCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:button="@drawable/custom_checkbox_selector"
                        android:background="@null" />

                    <ImageView
                        android:id="@+id/cardTypeIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_credit_card_modern"
                        android:tint="#007AFF"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Saved Card Info (visible when card is saved) -->
                        <LinearLayout
                            android:id="@+id/savedCardInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Saved Card"
                                android:textColor="#1D1D1F"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/savedCardText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VISA â¢â¢â¢â¢ 1234"
                                android:textColor="#8E8E93"
                                android:textSize="12sp"
                                android:fontFamily="monospace" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/changeCardButton"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Change Card"
                                android:textColor="#007AFF"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:minHeight="0dp"
                                android:padding="4dp" />

                        </LinearLayout>

                        <!-- Add Card Option (visible when no card is saved) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Credit Card"
                                android:textColor="#1D1D1F"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Visa, MasterCard, American Express"
                                android:textColor="#8E8E93"
                                android:textSize="12sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/addCardButton"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+ Add Card"
                                android:textColor="#007AFF"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:minHeight="0dp"
                                android:padding="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Confirm Purchase Button - Moved here -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/confirmPurchaseButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Confirm Purchase"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    app:backgroundTint="#007AFF"
                    app:cornerRadius="12dp"
                    app:rippleColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

        <!-- Bottom spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    </LinearLayout>

</ScrollView>