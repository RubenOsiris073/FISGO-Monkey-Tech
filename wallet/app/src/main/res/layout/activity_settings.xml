<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_header_bg"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingTop="50dp"
            android:paddingEnd="24dp"
            android:paddingBottom="40dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#FFFFFF"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configuración"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ajustes y preferencias"
                    android:textColor="#E3F2FD"
                    android:textSize="14sp"
                    android:alpha="0.9"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- User Profile Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/balance_card_bg"
            android:padding="24dp"
            android:elevation="12dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información del usuario"
                android:textColor="#8E8E93"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- User Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:tint="#007AFF"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textColor="#8E8E93"
                        android:textSize="10sp"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/userNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usuario Wallet"
                        android:textColor="#1D1D1F"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_dialog_email"
                    android:tint="#007AFF"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#8E8E93"
                        android:textSize="10sp"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/userEmailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="usuario@ejemplo.com"
                        android:textColor="#1D1D1F"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- User ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:layout_margin="-8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:tint="#007AFF"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID de usuario (toca para copiar)"
                        android:textColor="#8E8E93"
                        android:textSize="10sp"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/userIdText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abc123def456ghi789"
                        android:textColor="#1D1D1F"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:tint="#8E8E93"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Current Balance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_agenda"
                    android:tint="#34C759"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saldo actual"
                        android:textColor="#8E8E93"
                        android:textSize="10sp"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/currentBalanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$500.00"
                        android:textColor="#34C759"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Settings Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuraciones"
                android:textColor="#1D1D1F"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Notifications -->
            <LinearLayout
                android:id="@+id/notificationsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feature_card_bg"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_popup_reminder"
                    android:tint="#FF9500"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notificaciones"
                        android:textColor="#1D1D1F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/notificationStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activadas"
                        android:textColor="#8E8E93"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="#8E8E93"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Security -->
            <LinearLayout
                android:id="@+id/securityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feature_card_bg"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_lock_lock"
                    android:tint="#FF3B30"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seguridad"
                        android:textColor="#1D1D1F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PIN, biometría y más"
                        android:textColor="#8E8E93"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="#8E8E93"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Theme -->
            <LinearLayout
                android:id="@+id/themeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feature_card_bg"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_view"
                    android:tint="#5856D6"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tema"
                        android:textColor="#1D1D1F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/themeStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sistema"
                        android:textColor="#8E8E93"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="#8E8E93"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Language -->
            <LinearLayout
                android:id="@+id/languageCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feature_card_bg"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_sort_alphabetically"
                    android:tint="#00D4AA"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Idioma"
                        android:textColor="#1D1D1F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/languageStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Español"
                        android:textColor="#8E8E93"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="#8E8E93"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- About -->
            <LinearLayout
                android:id="@+id/aboutCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feature_card_bg"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="32dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_help"
                    android:tint="#8E8E93"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acerca de"
                        android:textColor="#1D1D1F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información de la app"
                        android:textColor="#8E8E93"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="#8E8E93"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Cerrar sesión"
                android:textColor="#FF3B30"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="#FF3B30"
                app:strokeWidth="2dp"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_lock_power_off"
                app:iconTint="#FF3B30"
                android:layout_marginBottom="12dp" />

            <!-- Delete Account Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteAccountButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Eliminar cuenta"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:backgroundTint="#FF3B30"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="#FFFFFF"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

        <!-- Bottom spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    </LinearLayout>

</ScrollView>