<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp"
    android:background="@drawable/feature_card_bg"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Transaction Icon -->
    <LinearLayout
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/feature_icon_bg"
        android:gravity="center"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/transactionIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_send"
            android:tint="#007AFF" />

    </LinearLayout>

    <!-- Transaction Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/transactionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Payment"
                android:textColor="#1D1D1F"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/transactionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-$125.50"
                android:textColor="#007AFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/transactionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pago en POS"
            android:textColor="#8E8E93"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/transactionDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="18 de junio, 2025"
                android:textColor="#8E8E93"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/transactionTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:30"
                android:textColor="#8E8E93"
                android:textSize="12sp"
                android:layout_marginStart="8dp" />

            <!-- Status indicator (small colored circle) -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/status_indicator_bg"
                android:layout_marginStart="12dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>