<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_header_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingTop="50dp"
        android:paddingEnd="16dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:tint="#FFFFFF"
            android:padding="8dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agregar Fondos"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Current Balance Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/balance_card_bg"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginBottom="32dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo Actual"
                    android:textColor="#8E8E93"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/currentBalanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1,250.00"
                    android:textColor="#1D1D1F"
                    android:textSize="32sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Amount Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cantidad a agregar"
                app:boxStrokeColor="#007AFF"
                app:hintTextColor="#007AFF"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/amountInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Quick Amount Buttons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidades Rápidas"
                android:textColor="#1D1D1F"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/amount50Button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="$50"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    app:backgroundTint="#E3F2FD"
                    app:strokeColor="#007AFF"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    android:textColor="#007AFF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/amount100Button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="$100"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    app:backgroundTint="#E3F2FD"
                    app:strokeColor="#007AFF"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    android:textColor="#007AFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/amount200Button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="$200"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    app:backgroundTint="#E3F2FD"
                    app:strokeColor="#007AFF"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    android:textColor="#007AFF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/amount500Button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="$500"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    app:backgroundTint="#E3F2FD"
                    app:strokeColor="#007AFF"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    android:textColor="#007AFF" />

            </LinearLayout>

            <!-- Info Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_banner_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_info_modern"
                    android:tint="#007AFF"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="• Monto mínimo: $10\n• Monto máximo: $5,000\n• Los fondos se agregan inmediatamente"
                    android:textColor="#007AFF"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

            <!-- Add Funds Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addFundsButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Agregar Fondos"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:backgroundTint="#34C759"
                app:cornerRadius="16dp"
                app:rippleColor="#FFFFFF"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
