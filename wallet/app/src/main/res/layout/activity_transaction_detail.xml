<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_header_bg"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingTop="50dp"
            android:paddingEnd="24dp"
            android:paddingBottom="40dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#FFFFFF"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalle de"
                    android:textColor="#E3F2FD"
                    android:textSize="16sp"
                    android:alpha="0.9"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transacci贸n"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Transaction Amount Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/balance_card_bg"
            android:padding="28dp"
            android:elevation="12dp"
            android:layout_marginBottom="24dp"
            android:gravity="center">

            <TextView
                android:id="@+id/transactionAmountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-$125.50"
                android:textColor="#FF3B30"
                android:textSize="48sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/transactionTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pago en POS"
                android:textColor="#1D1D1F"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/transactionStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completado"
                android:textColor="#34C759"
                android:textSize="14sp"
                android:background="@drawable/status_completed_bg"
                android:padding="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </LinearLayout>

        <!-- Transaction Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalles de la transacci贸n"
                android:textColor="#1D1D1F"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Date and Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feature_card_bg"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_today"
                    android:tint="#007AFF"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha y hora"
                        android:textColor="#8E8E93"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/transactionDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Martes, 18 de junio, 2025 at 02:30 PM"
                        android:textColor="#1D1D1F"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Transaction ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feature_card_bg"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:tint="#007AFF"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID de transacci贸n"
                        android:textColor="#8E8E93"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/transactionIdText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TXN123456789"
                        android:textColor="#1D1D1F"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace" />

                </LinearLayout>

            </LinearLayout>

            <!-- Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feature_card_bg"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:tint="#007AFF"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descripci贸n"
                        android:textColor="#8E8E93"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/transactionDescriptionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Compra en punto de venta"
                        android:textColor="#1D1D1F"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Payment Method -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feature_card_bg"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_agenda"
                    android:tint="#007AFF"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M茅todo de pago"
                        android:textColor="#8E8E93"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/paymentMethodText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Billetera Digital"
                        android:textColor="#1D1D1F"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Share Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/shareButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Compartir comprobante"
                android:textColor="#007AFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="#007AFF"
                app:strokeWidth="2dp"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_share"
                app:iconTint="#007AFF"
                android:layout_marginBottom="12dp" />

            <!-- Refund Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/refundButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Solicitar Reembolso"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:backgroundTint="#FF3B30"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_revert"
                app:iconTint="#FFFFFF"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

        <!-- Bottom spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    </LinearLayout>

</ScrollView>